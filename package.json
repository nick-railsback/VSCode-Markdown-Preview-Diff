{
  "name": "markdown-preview-diff",
  "displayName": "Markdown Preview Diff",
  "description": "GitHub-style markdown preview diff for VS Code - see rendered before/after comparisons without leaving your editor.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "markdown",
    "diff",
    "preview",
    "git"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown.openPreviewDiff",
        "title": "Markdown: Open Preview Diff"
      },
      {
        "command": "markdown.previewDiff.nextChange",
        "title": "Markdown: Next Change"
      },
      {
        "command": "markdown.previewDiff.prevChange",
        "title": "Markdown: Previous Change"
      }
    ],
    "keybindings": [
      {
        "command": "markdown.openPreviewDiff",
        "key": "ctrl+k d",
        "mac": "cmd+k d",
        "when": "editorLangId == markdown"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "markdown.openPreviewDiff",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Preview Diff",
      "properties": {
        "markdownPreviewDiff.defaultComparisonTarget": {
          "type": "string",
          "enum": [
            "HEAD",
            "staged"
          ],
          "default": "HEAD",
          "description": "Determines what version to compare working changes against. 'HEAD' compares against the last commit, 'staged' compares against staged changes."
        },
        "markdownPreviewDiff.syncScroll": {
          "type": "boolean",
          "default": true,
          "description": "Enable synchronized scrolling between the before and after panes in the preview diff."
        },
        "markdownPreviewDiff.highlightStyle": {
          "type": "string",
          "enum": [
            "default",
            "high-contrast"
          ],
          "default": "default",
          "description": "Color scheme for diff highlighting in the preview. 'default' uses subtle highlighting, 'high-contrast' uses more prominent colors with borders."
        },
        "markdownPreviewDiff.renderTimeout": {
          "type": "number",
          "default": 5000,
          "maximum": 10000,
          "minimum": 1000,
          "description": "Maximum time in milliseconds to wait for markdown rendering before timeout. Prevents hanging on very large files."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run --config vitest.performance.config.ts",
    "test:all": "npm run test:unit && npm run test:performance"
  },
  "devDependencies": {
    "@types/diff": "^7.0.2",
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "diff": "^8.0.2",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "simple-git": "^3.30.0"
  }
}
