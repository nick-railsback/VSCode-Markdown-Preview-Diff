        },
        {
          "input": "/home/nick/Ã©moji/ðŸŽ‰.md",
          "expected": "ðŸŽ‰.md",
          "type": "absolute"
        }
      ]
    },
    "hidden_files": {
      "description": "Hidden files and directories (dot-prefixed)",
      "cases": [
        {
          "input": "/home/nick/.config/vscode/settings.json",
          "expected": "settings.json",
          "type": "absolute"
        },
        {
          "input": "/home/nick/project/.gitignore",
          "expected": ".gitignore",
          "type": "absolute"
        },
        {
          "input": "/home/nick/.hidden/file.md",
          "expected": "file.md",
          "type": "absolute"
        }
      ]
    },
    "deep_nesting": {
      "description": "Deeply nested directory paths",
      "cases": [
        {
          "input": "/a/b/c/d/e/f/g/h/file.md",
          "expected": "file.md",
          "type": "absolute"
        }
      ]
    },
    "symlinks": {
      "description": "Paths that may involve symlinks (canonical behavior)",
      "cases": [
        {
          "input": "/tmp/project/link/file.md",
          "expected": "file.md",
          "type": "absolute",
          "note": "May be symlinked"
